<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutPrincipal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo_principal"
    android:padding="16dp"
    android:fitsSystemWindows="true">

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="178dp"
        android:layout_height="161dp"
        android:src="@drawable/mafre_logo"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:id="@+id/contenedorBotones"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@color/color_contenedor_botones"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/imgLogo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.45">

        <ImageButton
            android:id="@+id/btnLlamada"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:drawablePadding="8dp"
            android:layout_marginTop="8dp"
            android:layout_gravity="center"
            android:background="@drawable/llamada"
            android:backgroundTint="@color/color_botones"/>

        <ImageButton
            android:id="@+id/btnUrl"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:drawablePadding="8dp"
            android:layout_marginTop="8dp"
            android:layout_gravity="center"
            android:background="@drawable/web"
            android:backgroundTint="@color/color_botones"/>

        <ImageButton
            android:id="@+id/btnAlarma"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:drawablePadding="8dp"
            android:layout_marginTop="8dp"
            android:layout_gravity="center"
            android:background="@drawable/alarma"
            android:backgroundTint="@color/color_botones"/>

        <ImageButton
            android:id="@+id/btnMaps"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:drawablePadding="8dp"
            android:layout_marginTop="8dp"
            android:layout_gravity="center"
            android:background="@drawable/maps"
            android:backgroundTint="@color/color_botones"/>

        <ImageButton
            android:id="@+id/btnConfiguracion"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:drawablePadding="8dp"
            android:layout_marginTop="8dp"
            android:layout_gravity="center"
            android:background="@drawable/configuracion"
            android:backgroundTint="@color/color_config"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
